section#design
  .section-wrap
    .section-right
      .info-wrap
        .bar-wrap
          .primary-bar
          .secondary-bar
        h1.title Design
        .icon-wrap
          .icon-design.icon
          .icon-code.icon 
          .icon-hedron.icon
        p.blurb Seasonal robusta plunger pot flavour turkish strong viennese barista americano saucer 
      .thumb-wrap
        ul.thumb-container
          |{% for project in site.data.settings.design-projects %}
          label(for="{{ project.folder }}" )
            li.thumb(data-folder="{{ project.folder }}", data-section="#design")
              img(alt="{{ project.name }}", src= "assets/img/work/{{project.folder}}/thumb.jpg")
          |{% endfor %}
  include work-wrap
    
  
