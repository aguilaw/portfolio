section#hedron
  .section-right
    .info-wrap 
      .bar-wrap
        .primary-bar
        .secondary-bar
    
      h1.title Hedron
      .icon-wrap
        .icon-design.icon
        .icon-code.icon 
        .icon-hedron.icon
      p.blurb Seasonal robusta plunger pot flavour turkish strong viennese barista americano saucer 
    .thumb-wrap
      ul.thumb-container
        |{% for project in site.data.settings.hedron-projects %}
        label(for="{{ project.folder }}" )
          li.thumb(data-folder="{{ project.folder }}", data-section="#hedron")
            img(alt="{{ project.name }}", src= "assets/img/work/{{project.folder}}/thumb.jpg")
        |{% endfor %}
